
@model IQueryable<BooksItem>

 <section id="books">
     <div>
@{
      
}        
@if (Model.Any())
        {
                @foreach (BooksItem entity in Model)
                {    @if (entity.name != null)
                     {
                         <section>
									<header class="major">
										<h2> Имя: @($"{entity.name}")</h2>
									</header>
									<div class="mini-posts">
										<article>
										<div>
										<a href="#" class="image1" style="width: 40%;"> <img src="~/img/@($"{entity.img}")" alt=""/></a>
