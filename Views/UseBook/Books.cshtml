											<p>@($"{entity.desc}")</p>
										</article>
										<!-- Каринки с текстом с боку-->
									</div>
									<ul class="actions">
										<li><a href="#" class="button">Читать</a></li>
									</ul>
								</section>
								
                    <div>
                        
                        <a>
                           Название:  @($"{entity.name}")                           
                        </a>
                        @*<a> Жанр:  @foreach (var entityGenre in entity.genre) { @($"{entityGenre.genreName}")}<a/>*@
                        <a> Автор: @($"{entity.Autor}") <a/>
